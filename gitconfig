[user]
	name = Michael Lee
	email = michael-lee@umich.edu
[alias]
	co = checkout
	update = checkout
	up = checkout
	ci = commit
	st = status -uno
	ch = diff --name-status -r
	ff = pull --ff-only
	br = branch
	br-show = branch -av
	amend = commit -a --amend
	subpull = submodule foreach --recursive git pull origin master
	stash-diff = stash show --pretty=raw
	recent-hist = log --graph --date=short --pretty='%Cred%h %Cgreen%ar%Creset | %s%C(yellow)%d %C(bold blue)[%an]%Creset' --since='14 days ago'
	hist =      log --graph --date=short --pretty='%Cred%h %Cgreen%ar%Creset | %s%C(yellow)%d %C(bold blue)[%an]%Creset'
	hist-stat = log --graph --date=short --pretty='%Cred%h %Cgreen%ar%Creset | %C(bold blue)[%an]%Creset%C(yellow)%d%Creset%n%s' --stat
	hist-all =  log --graph --date=short --pretty='%Cred%h %Cgreen%ar%Creset | %s%C(yellow)%d %C(bold blue)[%an]%Creset' --all
	sl =  log --graph --date=short --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all --since='30 days ago'
	type = cat-file -t
	dump = cat-file -p
	flash = !git stash && git pull --rebase ${@} && git stash pop && echo "Flashed "
	w-add = !sh -c 'git diff -w --no-color "$@" | git apply --cached --ignore-whitespace' -
[core]
	excludesfile = ~/.gitignore
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = always
	grep = always
[color "branch"]
	local = yellow
	remote = green
	current = yellow reverse
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	conflictstyle = diff3
[push]
	default = current
[branch]
	autosetuprebase = always
