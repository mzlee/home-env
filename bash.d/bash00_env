# .bash_env

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

debug Platform
case `uname -s` in
    Linux)
	platform='linux'
	;;
    FreeBSD)
	platform='freebsd'
	;;
    Darwin)
	platform='darwin'
	;;
    *)
	platform='unknown'
	;;
esac
export PLATFORM="$platform"

## Path
debug Path
extra_bin="/usr/local/sbin ${HOME}/bin /opt/google/chrome"
extra_lib="${HOME}/lib /usr/local/lib /usr/lib"
for path in ${extra_bin}; do
    if [ -d ${path} ]; then
	PATH=${path}:${PATH}
    fi
done
PATH=$(tr ':' '\n' <<< "$PATH" | uniq | tr '\n' ':')
PATH=${PATH%?}
export PATH
for path in ${extra_lib}; do
    if [ -d ${path} ]; then
	LD_LIBRARY_PATH=${path}:${LD_LIBRARY_PATH}
    fi
done
LD_LIBRARY_PATH=$(tr ':' '\n' <<< "$LD_LIBRARY_PATH" | sort -u | tr '\n' ':')
LD_LIBRARY_PATH=${LD_LIBRARY_PATH%?}
export LD_LIBRARY_PATH

## Editor
debug Editor
export EDITOR='emacs -nw'

## Python
debug Python
export PYTHONPATH="$HOME/lib/python2.6/site-packages"
export PYTHONSTARTUP="$HOME/.pythonrc.py"

## Platform
debug Platform
if [ $PLATFORM = darwin ]; then
    export CLICOLOR=1
    export LSCOLORS=ExFxCxDxBxegedabagacad
    test -r /sw/bin/init.sh && . /sw/bin/init.sh
elif [ $PLATFORM = linux ]; then
    export PRINTER='lw601'
    export LS_COLORS="di=94:fi=0:ln=46:pi=32:so=32:bd=32:cd=32:or=41:mi=5:ex=32:*.rpm=90"
fi

debug History
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1000
HISTFILESIZE=2000

shopt -s histappend
shopt -s checkwinsize

# Set the locale
if [ ${PLATFORM} == 'linux' ]; then
    export LANG=en_US.UTF-8
    export LANGUAGE=en_US.UTF-8
    export TZ="America/Chicago"
fi

if [ ${TERM} != screen ]
then
    [ -f ${HOME}/.Xmodmap ] && xmodmap ${HOME}/.Xmodmap 2> /dev/null
fi

## Test a couple of different standard locations
if [ -d "${HOME}/Documents/research/notes" ]; then
    export NOTES_DIR="${HOME}/Documents/research/notes"
fi

#if [ `id -u` != 0 ]; then
#  export VIRTUALENV_USE_DISTRIBUTE="1"
#  export WORKON_HOME="$HOME/.virtualenvs"
#  . /usr/local/bin/virtualenvwrapper.sh
#  export PIP_VIRTUALENV_BASE="$WORKON_HOME"
#  export PIP_RESPECT_VIRTUALENV="true"
#fi

debug Done

# export HADOOP_HOME=/var/local/airavat/hadoop
# export HADOOP_CONF_DIR=/var/local/airavat/hadoop/conf
# export JAVA_HOME=/usr/lib/jvm/j2sdk-image
# export PATH=$PATH:$HADOOP_HOME/bin
