# .bash_env
debug Platform
case `uname -s` in
    Linux)
	platform='linux'
	;;
    FreeBSD)
	platform='freebsd'
	;;
    Darwin)
	platform='darwin'
	;;
    *)
	platform='unknown'
	;;
esac
export PLATFORM="$platform"

## Path
debug Path
extra_bin="${HOME}/bin /opt/google/chrome"
extra_lib="${HOME}/lib /usr/local/lib /usr/lib"
for path in ${extra_bin}
do
    if [ -d ${path} ]
    then
	PATH=${path}:${PATH}
    fi
done
for path in ${extra_lib}
do
    if [ -d ${path} ]
    then
	LD_LIBRARY_PATH=${path}:${LD_LIBRARY_PATH}
    fi
done
export PATH
export LD_LIBRARY_PATH

## Editor
debug Editor
export EDITOR='emacs -nw'

## Python
debug Python
export PYTHONPATH="$HOME/lib/python2.6/site-packages"
export PYTHONSTARTUP="$HOME/.pythonrc.py"

## Platform
debug Platform
if [ $PLATFORM = darwin ]
then
    export CLICOLOR=1
    export LSCOLORS=ExFxCxDxBxegedabagacad
    test -r /sw/bin/init.sh && . /sw/bin/init.sh
elif [ $PLATFORM = linux ]
then
    export PRINTER='lw32'
    export LS_COLORS="di=94:fi=0:ln=46:pi=32:so=32:bd=32:cd=32:or=41:mi=5:ex=32:*.rpm=90"
fi

debug History
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1000
HISTFILESIZE=2000

shopt -s histappend
shopt -s checkwinsize

debug Papers
`which mendeleydesktop > /dev/null`
if [ $? = 0 ]
then
    PAPERS_DIR="$HOME/Documents/papers"
    export PAPERS_DIR
fi

debug Notes
# Look for the first directory called notes and set that
if [ $HOSTNAME = 'habals' ]
then
    NOTES_DIR=$(readlink -f `find $HOME/ -type d -name notes -print -quit` 2> /dev/null)
    export NOTES_DIR
fi

# Set the locale
export LANG=en_US.utf8
export TZ="America/Chicago"

if [ ${TERM} != screen ]
then
    [ -f ${HOME}/.Xmodmap ] && xmodmap ${HOME}/.Xmodmap 2> /dev/null
fi

debug Done
