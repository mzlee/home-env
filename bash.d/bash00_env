# .bash_env

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

debug Platform
case `uname -s` in
    Linux)
	platform='linux'
	;;
    FreeBSD)
	platform='freebsd'
	;;
    Darwin)
	platform='darwin'
	;;
    *)
	platform='unknown'
	;;
esac
export PLATFORM="$platform"

## Path
function _dedup_path {
    local path="${1}"
    tr ':' '\n' <<< "${path}" | awk '{
if ($0 && !path_arr[$0]) {
  if (path) {
    path=path":"$0
  } else {
    path=$0
  }
  path_arr[$0]=1
}} END {print path}'
}
debug Path
extra_bin="/opt/google/chrome /usr/local/opt/gnu-tar/libexec/gnubin /usr/local/opt/gnu-sed/libexec/gnubin /usr/local/opt/coreutils/libexec/gnubin /usr/local/sbin /usr/local/bin ${HOME}/bin "
extra_lib="/usr/local/lib /usr/lib ${HOME}/lib"
for path in ${extra_bin}; do
    if [ -d ${path} ]; then
	PATH=${path}:${PATH}
    fi
done
export PATH=$(_dedup_path "${PATH}")
for path in ${extra_lib}; do
    if [ -d ${path} ]; then
	LD_LIBRARY_PATH=${path}:${LD_LIBRARY_PATH}
    fi
done
export LD_LIBRARY_PATH=$(_dedup_path "${LD_LIBRARY_PATH}")

## Editor
debug Editor
export EDITOR='emacs -nw'

## Python
debug Python
export PYTHONPATH="$HOME/lib/python2.6/site-packages"
export PYTHONSTARTUP="$HOME/.pythonrc.py"

## Platform
debug Platform
if [ $PLATFORM = darwin ]; then
    export CLICOLOR=1
    export LSCOLORS=ExFxCxDxBxegedabagacad
    test -r /sw/bin/init.sh && . /sw/bin/init.sh
elif [ $PLATFORM = linux ]; then
    export PRINTER='lw601'
    export LS_COLORS="di=94:fi=0:ln=46:pi=32:so=32:bd=32:cd=32:or=41:mi=5:ex=32:*.rpm=90"
fi

debug History
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1000
HISTFILESIZE=2000

shopt -s histappend
shopt -s checkwinsize

# Set the locale
if [ ${PLATFORM} == 'linux' ]; then
    export LANG=en_US.UTF-8
    export LANGUAGE=en_US.UTF-8
    export TZ="America/New_York"
fi

if [ ${TERM} != screen ]
then
    [ -f ${HOME}/.Xmodmap ] && xmodmap ${HOME}/.Xmodmap 2> /dev/null
fi

## Test a couple of different standard locations
if [ -d "${HOME}/Documents/research/notes" ]; then
    export NOTES_DIR="${HOME}/Documents/research/notes"
fi

#if [ `id -u` != 0 ]; then
#  export VIRTUALENV_USE_DISTRIBUTE="1"
#  export WORKON_HOME="$HOME/.virtualenvs"
#  . /usr/local/bin/virtualenvwrapper.sh
#  export PIP_VIRTUALENV_BASE="$WORKON_HOME"
#  export PIP_RESPECT_VIRTUALENV="true"
#fi

debug Done

