# Bash Aliases

# ls aliases
alias la='ls -AF'
alias ll='ls -l'
alias l='ls -AlF'

# typos
alias sl='ls'
alias dc='cd'

# emacs aliases
alias emacs='emacs -nw'
alias emasc='emacs -nw'
alias emac='emacs -nw'

# grep aliases
alias grhn='grep -rHn'
alias grin='grep -rHni'

# useful commands
alias wtf='watch -n 1 w -hs'

# removing default commands
alias g=''
alias s=''

# adding ssh aliases
alias keyon='ssh-add -t 10800'
alias keyoff='ssh-add -D'
alias keylist='ssh-add -l'
alias keylock='ssh-add -x'
alias keyunlock='ssh-add -X'

alias less='less -R'
if [ $PLATFORM = linux ]; then
   alias gopen='xdg-open'
fi

# svn commands
#alias svndiff='svn diff --diff-cmd colordiff -x "-u -w -p" "$@" | less'
#alias svnst='svn st | grep -v kbuild | grep -v db- | grep -v glibc | grep -v qemu-kvm'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Hadoop Aliases
unalias fs &> /dev/null
unalias hls &> /dev/null
alias fs='hadoop dfs'
alias hls='fs -ls'
alias hrm='fs -rm'
alias hrmr='fs -rmr'
alias hcat='fs -cat'
alias hput='fs -put'
alias hget='fs -get'
